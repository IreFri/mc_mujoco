
<mujoco model="ground">
  <compiler angle="radian"/>

  <default>
    <default class="collision">
      <geom condim="3" group="0" type="mesh" solref="0.00001 1" solimp="0.99 0.99 0.01" />
    </default>
    <default class="visual">
      <geom group="1" conaffinity="0" contype="0" type="mesh" />
    </default>
  </default>

  <asset>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4"
        rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="1 1"
        reflectance="0.2"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <body name="base_link">
      <geom name="floor" pos="0 0 0" size="0 0 .25" type="plane" material="groundplane" condim="3" group="1"/>
    </body>

  </worldbody>

</mujoco>
